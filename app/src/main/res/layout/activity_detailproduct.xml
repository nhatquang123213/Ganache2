<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE6E8"
    tools:context=".DetailproductActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/back_detail_pro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="58dp"
            android:background="@null"
            android:src="@drawable/chevronleft" />
        <ImageButton
            android:id="@+id/trym"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/back_detail_pro"
            android:layout_marginTop="58dp"
            android:layout_marginRight="40dp"
            android:tint="@color/black"
            android:background="@null"
            android:src="@drawable/favoricon" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="50dp"
            android:id="@+id/txt_name_pro_detail"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Rose Wedding">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/txt_detail"
            android:layout_below="@id/txt_name_pro_detail"
            android:layout_height="match_parent"
            android:textSize="12dp"
            android:text="AmourDuCake on Instagram: “YES OR NO??? Flamingo cake by @kasadelika This cake is so amaziing!! #flamingo #animal #flamingos #flower #white #pets #cake #cakeart…”">

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_marginTop="250dp"
            android:layout_below="@id/txt_detail"
            android:background="@drawable/shape_search_re">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#CCFA4A0C"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txt_price_detail"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                android:text="50.00$"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/chos"
                android:textSize="15dp"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/txt_price_detail"
                android:layout_marginTop="10dp"
                android:text="Choose size"></TextView>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/chos"
                android:spinnerMode="dropdown"
                android:id="@+id/size"
                android:drawSelectorOnTop="true"
                android:entries="@array/spinnerItems"
                android:layout_marginRight="30dp"
                android:background="@drawable/style_spinner"></Spinner>
            <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="#FF5252"
                android:layout_alignRight="@id/size"
                android:layout_toRightOf="@id/add_cart"
                android:layout_below="@id/size"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="BUY NOW"
                android:textSize="17dp"
                android:id="@+id/buynow"
                ></Button>
            <NumberPicker
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:id="@+id/number_choose"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/size"
                android:layout_alignLeft="@id/size"
                android:theme="@style/NumberPickerTheme"
                android:background="@drawable/style_number_pick"></NumberPicker>
            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style"
                android:backgroundTint="@color/theme"
                android:layout_toRightOf="@id/number_choose"
                android:layout_below="@id/size"
                android:layout_marginTop="10dp"
                android:layout_alignBottom="@id/number_choose"
                android:layout_marginLeft="10dp"
                android:text="ADD TO CART"
                android:textSize="17dp"
                android:id="@+id/add_cart"
                ></Button>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="25dp"
                android:layout_alignRight="@id/size"
                android:layout_alignLeft="@id/size"
                android:id="@+id/ke1"
                android:layout_below="@id/buynow"
                android:background="@color/theme"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/ingra"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/ke1"
                android:layout_marginTop="15dp"
                android:text="Ingradients"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dropdown_mm"
                android:layout_below="@id/ke1"
                android:layout_alignRight="@id/ke1"
                android:layout_marginTop="15dp"></ImageView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="25dp"
                android:layout_alignRight="@id/size"
                android:layout_alignLeft="@id/size"
                android:id="@+id/ke2"
                android:layout_below="@id/ingra"
                android:background="@color/theme"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/ori"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/ke2"
                android:layout_marginTop="15dp"
                android:text="Originator"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dropdown_mm"
                android:layout_below="@id/ke2"
                android:layout_alignRight="@id/ke2"
                android:layout_marginTop="15dp"></ImageView>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="25dp"
                android:layout_alignRight="@id/size"
                android:layout_alignLeft="@id/size"
                android:id="@+id/ke3"
                android:layout_below="@id/ori"
                android:background="@color/theme"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/poti"
                android:textSize="20dp"
                android:fontFamily="serif"
                android:layout_marginLeft="30dp"
                android:layout_below="@id/ke3"
                android:layout_marginTop="15dp"
                android:text="Portion Size"></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/upupup"
                android:layout_below="@id/ke3"
                android:layout_alignRight="@id/ke2"
                android:layout_marginTop="15dp"></ImageView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sizzz"
                android:layout_below="@id/poti"
                android:layout_alignLeft="@id/poti"
                android:layout_marginTop="15dp"></ImageView>
        </RelativeLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/img_detail"
            android:layout_marginTop="10dp"
            android:layout_below="@id/txt_detail"
            android:src="@drawable/cake_bestsell"></ImageView>



    </RelativeLayout>


</ScrollView>