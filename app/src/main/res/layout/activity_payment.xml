<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeliveryActivity">

    <ImageButton
        android:id="@+id/back_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="58dp"
        android:background="@null"
        app:srcCompat="@drawable/chevronleft" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="Checkout"
        android:layout_alignTop="@+id/back_pay"
        android:layout_centerHorizontal="true"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/delllll"
        android:textSize="30dp"
        android:text="Payment"
        android:layout_alignLeft="@+id/back_pay"
        android:layout_below="@id/back_pay"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/aaaaaaa"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:text="Payment method"
        android:layout_alignLeft="@+id/back_pay"
        android:layout_below="@id/delllll"></TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:id="@+id/hahahah"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#1AFF768F"
        app:cardCornerRadius="15dp"
        android:layout_alignLeft="@id/aaaaaaa"
        android:layout_below="@id/aaaaaaa">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/pay_method_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:background="@android:color/darker_gray"/>
            <RadioButton android:id="@+id/pay_method_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Bank account"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
        </RadioGroup>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:id="@+id/huhuhu"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#1AFF768F"
        app:cardCornerRadius="15dp"
        android:layout_alignLeft="@id/aaaaaaa"
        android:layout_below="@id/hahahah">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton android:id="@+id/radio_pirates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Door Delivery"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
            <View
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:background="@android:color/darker_gray"/>
            <RadioButton android:id="@+id/radio_ninjas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Pick up"
                android:textSize="18dp"
                android:textColor="@color/black"
                />
        </RadioGroup>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/totalsssss"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:text="Total"
        android:layout_alignLeft="@+id/back_pay"
        android:layout_below="@id/huhuhu"></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:id="@+id/txt_total_pay"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:text="20$"
        android:layout_alignRight="@+id/hahahah"
        android:layout_below="@id/huhuhu"></TextView>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/theme"
        android:id="@+id/paymenttt"
        android:textSize="18dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:shadowRadius="10"
        android:textColor="@color/white"
        android:text="Proceed to payment"
        ></Button>
</RelativeLayout>