<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:id="@+id/ln_cart"
    android:background="@drawable/shape_linear"
    android:layout_marginRight="15dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/img_cart"
            android:src="@drawable/image_custom_cart"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            ></de.hdodenhof.circleimageview.CircleImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_cart"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/name_cart"
            android:text="Candy Cupcake"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5252"
            android:textSize="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/price_cart"
            android:text="Candy Cupcake"
            ></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/minus_cart"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/minuscircle"></ImageView>
            <TextView
            android:layout_width="30dp"
                android:id="@+id/number_cart"
            android:layout_height="wrap_content"
            android:background="@null"
                android:text="1"
                android:textSize="15dp"
                android:gravity="center"
                android:textStyle="bold"
                ></TextView>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plus_cart"
                android:background="@null"
                android:src="@drawable/pluscircle">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteicon_cart"
        android:src="@drawable/deleteiconn"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        ></ImageView>

</RelativeLayout>